using System;
namespace Rubles
{
    class Program
    {
        static void Main(string[] args)
        {
            double rubles;
            double euros;
            double dollars;
            double rublesEuros = 59.38;
            double rublesDollars = 59.63;
            double dollarsEuros = 0.98;
            string answer = "";
            int operation;
            double sum;

            Console.WriteLine("Введите Ваш баланс");
            Console.Write("Рубли: ");
            rubles = double.Parse(Console.ReadLine());
            Console.Write("Евро: ");
            euros = double.Parse(Console.ReadLine());
            Console.Write("Доллары: ");
            dollars = double.Parse(Console.ReadLine());

            while (answer != "N")
            {
                Console.WriteLine();
                Console.WriteLine("Выберите тип операции и введите ее цифру:");
                Console.WriteLine("1.Рубли в евро");
                Console.WriteLine("2.Евро в рубли");
                Console.WriteLine("3.Рубли в доллары");
                Console.WriteLine("4.Доллары в рубли");
                Console.WriteLine("5.Доллары в евро");
                Console.WriteLine("6.Евро в доллары");
                operation = int.Parse(Console.ReadLine());
                Console.WriteLine("Введите нужную сумму");
                sum = double.Parse(Console.ReadLine());
                
                switch (operation)
                {
                    case 1:
                        if (rubles < sum)
                        {
                            Console.WriteLine("Сумма операции изменена в связи с нехваткой средств");
                            sum = rubles;
                        }
                        rubles -= sum;
                        euros += (sum / rublesEuros);
                        break;
                    case 2:
                        if (euros < sum)
                        {
                            Console.WriteLine("Сумма операции изменена в связи с нехваткой средств");
                            sum = euros;
                        }
                        euros -= sum;
                        rubles += (sum * rublesEuros);
                        break;
                    case 3:
                        if (rubles < sum)
                        {
                            Console.WriteLine("Сумма операции изменена в связи с нехваткой средств");
                            sum = rubles;
                        }
                        rubles -= sum;
                        dollars += (sum / rublesDollars);
                        break;
                    case 4:
                        if (dollars < sum)
                        {
                            Console.WriteLine("Сумма операции изменена в связи с нехваткой средств");
                            sum = dollars;
                        }
                        dollars -= sum;
                        rubles += (sum * rublesDollars);
                        break;
                    case 5:
                        if (dollars < sum)
                        {
                            Console.WriteLine("Сумма операции изменена в связи с нехваткой средств");
                            sum = dollars;
                        }
                        dollars -= sum;
                        euros += (sum * dollarsEuros);
                        break;
                    case 6:
                        if (euros < sum)
                        {
                            Console.WriteLine("Сумма операции изменена в связи с нехваткой средств");
                            sum = euros;
                        }
                        euros -= sum;
                        dollars += (sum / rublesDollars);
                        break;
                    default:
                        Console.WriteLine("Данной операции нет");
                        break;
                }

                Console.WriteLine();
                Console.WriteLine("Ваш баланс");
                Console.WriteLine($"Рубли: {rubles}");
                Console.WriteLine($"Евро: {euros}");
                Console.WriteLine($"Доллары: {dollars}");
                Console.WriteLine("Желаете продолжить? Y/N?");
                answer = Console.ReadLine();
            }

            Console.WriteLine("До свидания!");
            Console.Read();
        }
    }
}

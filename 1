using System;
namespace Rubles
{
    class Program
    {
        static void Main(string[] args)
        {
            double rubles, euros, dollars;
            double rublesToEuros = 59.38, rublesToDollars = 59.63, dollarsToEuros = 0.98;
            string answer = "";
            int operation;
            double sumOperation;

            Console.WriteLine("Введите Ваш баланс");
            Console.Write("Рубли: ");
            rubles = double.Parse(Console.ReadLine());
            Console.Write("Евро: ");
            euros = double.Parse(Console.ReadLine());
            Console.Write("Доллары: ");
            dollars = double.Parse(Console.ReadLine());

            while (answer != "N")
            {
                Console.WriteLine("\nВыберите тип операции и введите ее цифру:");
                Console.WriteLine("1.Рубли в евро");
                Console.WriteLine("2.Евро в рубли");
                Console.WriteLine("3.Рубли в доллары");
                Console.WriteLine("4.Доллары в рубли");
                Console.WriteLine("5.Доллары в евро");
                Console.WriteLine("6.Евро в доллары");
                operation = int.Parse(Console.ReadLine());

                switch (operation)
                {
                    case 1:
                        Console.WriteLine("Введите нужную сумму");
                        sumOperation = double.Parse(Console.ReadLine());
                        if (rubles < sumOperation || sumOperation <= 0)
                        {
                            Console.WriteLine("Недопустимая сумма, попробуйте еще раз");
                        }
                        else
                        {
                            rubles -= sumOperation;
                            euros += sumOperation / rublesToEuros;
                        }
                        break;
                    case 2:
                        Console.WriteLine("Введите нужную сумму");
                        sumOperation = double.Parse(Console.ReadLine());
                        if (euros < sumOperation || sumOperation <= 0)
                        {
                            Console.WriteLine("Недопустимая сумма, попробуйте еще раз");
                        }
                        else
                        {
                            euros -= sumOperation;
                            rubles += sumOperation * rublesToEuros;
                        }
                        break;
                    case 3:
                        Console.WriteLine("Введите нужную сумму");
                        sumOperation = double.Parse(Console.ReadLine());
                        if (rubles < sumOperation || sumOperation <= 0)
                        {
                            Console.WriteLine("Недопустимая сумма, попробуйте еще раз");
                        }
                        else
                        {
                            rubles -= sumOperation;
                            dollars += sumOperation / rublesToDollars;
                        }
                        break;
                    case 4:
                        Console.WriteLine("Введите нужную сумму");
                        sumOperation = double.Parse(Console.ReadLine());
                        if (dollars < sumOperation || sumOperation <= 0)
                        {
                            Console.WriteLine("Недопустимая сумма, попробуйте еще раз");
                        }
                        else
                        {
                            dollars -= sumOperation;
                            rubles += sumOperation * rublesToDollars;
                        }
                        break;
                    case 5:
                        Console.WriteLine("Введите нужную сумму");
                        sumOperation = double.Parse(Console.ReadLine());
                        if (dollars < sumOperation || sumOperation <= 0)
                        {
                            Console.WriteLine("Недопустимая сумма, попробуйте еще раз");
                        }
                        else
                        {
                            dollars -= sumOperation;
                            euros += sumOperation * dollarsToEuros;
                        }
                        break;
                    case 6:
                        Console.WriteLine("Введите нужную сумму");
                        sumOperation = double.Parse(Console.ReadLine());
                        if (euros < sumOperation || sumOperation <= 0)
                        {
                            Console.WriteLine("Недопустимая сумма, попробуйте еще раз");
                        }
                        else
                        {
                            euros -= sumOperation;
                            dollars += sumOperation / rublesToDollars;
                        }
                        break;
                    default:
                        Console.WriteLine("Данной операции нет");
                        break;
                }

                
                Console.WriteLine("\nВаш баланс");
                Console.WriteLine($"Рубли: {rubles}");
                Console.WriteLine($"Евро: {euros}");
                Console.WriteLine($"Доллары: {dollars}");
                Console.WriteLine("Желаете продолжить? Y/N?");
                answer = Console.ReadLine();
            }

            Console.WriteLine("До свидания!");
            Console.Read();
        }
    }
}
